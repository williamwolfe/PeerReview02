    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
   <div class="field">
    <%= f.label :link%><br>
    <%= f.url_field :link %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>

