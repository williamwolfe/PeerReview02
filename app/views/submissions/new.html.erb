<%= form_for :submission, url: submissions_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.label :link%><br>
    <%= f.text_area :link %>
  </p>


  <p>
    <%= f.submit %>
  </p>
<% end %>