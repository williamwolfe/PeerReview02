        		<!--<td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      		</tr>
    	<% end %>
    	
    	<tr>
    		<td  width="10%" colspan='3' align='right'>average =
    			<% if (@reviews.average("score").is_a? Numeric) %>
    	 			<%=@reviews.average("score").round(2)%>
    	 		<% else %>
    	 			*.* 
    	 		<%end%>
    	 
    	 	</td>
    	 </tr>
    	 
    	 </td></tr>
    <% else %>
