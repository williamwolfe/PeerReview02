

<%= form_for(@review, html:{role:"form"}) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <div class="form-group">
    <%= f.label :submission_id %><br>
    <% if (@submission_id) %>
    	<%= f.number_field :submission_id, readonly:true, value:@submission_id %>
    <% else %>
    	<%= f.number_field :submission_id, readonly:true, value:@review.submission_id %>
    <% end %>
  </div>
    
  <div class="form-group">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id, readonly:true, value:current_user.id %>
  </div>

  <div class="form-group">
    <%= f.label :comment %><br>
    <%= f.text_area :comment, class:"form-control"%>
  </div>
  
  <div class="form-group">
    <%= f.label :score %><br>
    <%= f.number_field :score, class:"form-control" %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>



